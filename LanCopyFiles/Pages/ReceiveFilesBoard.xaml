<Page x:Class="LanCopyFiles.Pages.ReceiveFilesBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LanCopyFiles.Pages"
      xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ReceiveFilesBoard">

    <VirtualizingStackPanel
        Margin="18,0,18,18"
        IsVirtualizing="True"
        VirtualizationMode="Recycling">

        <MediaElement Source="Images/data-transfering.gif"
                      LoadedBehavior="Play" Visibility="Visible"
                      Height="500"
                      x:Name="dataTransferingGifMediaElement"
                      MediaEnded="DataTransferingGifMediaElement_OnMediaEnded"
                      UnloadedBehavior="Manual" 
        />
        <StackPanel HorizontalAlignment="Center">
            <TextBlock
                Margin="0,8,0,0"
                FontSize="16"
                Text="Data on the way to this computer..." 
            />
            <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="All files and folders received will be saved on Desktop" 
                       Margin="0 4 0 0"/>
        </StackPanel>

    </VirtualizingStackPanel>
</Page>